# Variabel Pada piring 1, piring 2 dan piring 3
Piring1 = "Manggis"
Piring2 = "Pisang"
Piring3 = None

# Tukar posisi Manggis dan Pisang
# Simpan Manggis di Piring1
Piring1 = "Manggis"

# Simpan Pisang di Piring2
Piring2 = "Pisang"

# Kosongkan Piring1
Piring1 = None

# Pindahkan Manggis dari Piring1 ke Piring3
Piring3 = "Manggis"
Piring1 = None

# Kosongkan Piring2
Piring2 = None

# Pindahkan Pisang dari Piring2 ke Piring1
Piring1 = "Pisang"
Piring2 = None

# Pindahkan Manggis dari Piring3 ke Piring2
Piring2 = "Manggis"
Piring3 = None

# Hasil akhir
print("Hasil Akhir:")
print("Piring1:", Piring1)
print("Piring2:", Piring2)
print("Piring3:", Piring3)

