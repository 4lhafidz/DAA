# Variabel m dan n dengan nilai 3 dan 4
# Input m dan n dengan nilai 3 dan 4
def kpk(m, n):
    if m > n:
        terbesar = m
    else:
        terbesar = n
 # Menghitung m dan n dengan mencari nilai terkecil
    while True:
        if terbesar % m == 0 and terbesar % n == 0:
            kpk = terbesar
            break
        terbesar += 1
    
    return kpk
m = 3
n = 4
kpk = kpk(m, n)
# Menampilkan hasil perhitungan
print("KPK dari", m, "dan", n, "yaitu", kpk)

