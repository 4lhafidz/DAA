# Variabel Luas, Alas Dan Tinggi
alas = 25
tinggi = 30

# Menghitung luas segitiga
luas = (alas * tinggi) / 2

# Menampilkan hasil
print("Luas segitiga dengan alas", alas, "dan tinggi", tinggi, "adalah:", luas)

====================================================================================

# Variabel luas, panjang dan tinggi jajar genjang
# Input nilai panjang dan tinggi
panjang = 5
tinggi = 3

# Menghitung luas jajar genjang
luas = (panjang * tinggi) 

# Menampilkan hasil luas jajar genjang
print("luas jajar genjang dengan panjang", panjang, "tinggi", tinggi, "adalah", luas)

====================================================================================

# Variabel volume, jari-jari dan tinggi tabung
# Input nilai jari-jari dan tinggi tabung
jari_jari = 3
tinggi = 5

# Menghitung volume tabung
volume =  (3.14 * jari_jari * jari_jari * tinggi)

# Menampilkan hasil volume tabung
print("volume tabung:", volume)

====================================================================================


# Variabel volume, diameter dan tinggi kerucut
# Input volume, diameter dan tinggi
diameter = 5
tinggi = 4

# Menghitung jari_jari kerucut
jari_jari = diameter / 2

# Menghitung volume kerucut
volume = (1/3) * 3.14 * (jari_jari ** 2) * tinggi

# Menampilkan hasil perhitungan
print("volume kerucut adalah: ", volume)

